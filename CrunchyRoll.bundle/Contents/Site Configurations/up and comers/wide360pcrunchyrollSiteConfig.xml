	<state name="pausing_ad">
		<event>
			<condition> <command name="pause" /> </condition>
			<action>
				<!-- anywhere in the middle of vid should do it -->
				<click "312" y="190" />
				<goto state="playing_ad" />
			</action>
		</event>
	</state>	<state name="playing_ad">
		<event>
			<condition>
				<command name="pause"/>
			</condition>
			<action>
				<!-- anywhere in the middle of vid should do it -->
				<click "312" y="190" />
				<goto state="pausing_ad"/>
			</action>
		</event>
		<event>
			<condition>
				<and>
					<not>
						<condition name="ad_bar_present"/>
					</not>
					<condition name="bar_present"/>
				</and>
			</condition>
			<action>
				<goto state="playing"/>
			</action>
		</event>
	</state>
	<state name="playing">
		<event>
			<condition>
				<and>
					<command name="pause"/>
					<!--<condition name="testjs"/>-->
				</and>
			</condition>
			<action>
				<!-- <click x="21" y="-15"/> <move x="1" y="-1"/> -->
				<!--<run script="%.togglePlayPause()" />-->
				<!--
				<run script="%.pauseVideo()"/>
				<pause time="50"/>
				-->
				<click x="21" y="-15"/>
				<move x="1" y="-1"/>
				<pause time="100"/>
				<goto state="paused"/>
			</action>
		</event>
		<event>
			<condition>
				<and>
					<condition name="bar_not_present"/>
					<javascript script="($.getDuration()==$.getPlayhead() ? 1 : 0)" matches="0" />
				</and>
			</condition>
			<action>
				<goto state="playing_ad"/>
			</action>
		</event>
		<event>
			<condition>
				<and>
					<color x="480" y="18" rgb="f7931e"/>
					<color x="305" y="5" rgb="000000"/>
				</and>
			</condition>
			<action>
				<goto state="end"/>
			</action>
		</event>
	</state>
	<state name="paused">
		<event>
			<condition>
				<command name="play"/>
			</condition>
			<action>
				<!-- <click x="21" y="-15"/> <move x="1" y="-1"/> -->
				<!--<run script="%.togglePlayPause()" />-->
				<!--
				<run script="%.playVideo()"/>
				<pause time="50"/>
				-->
				<click x="21" y="-15"/>
				<move x="1" y="-1"/>
				<pause time="100"/>
				<goto state="playing"/>
			</action>
		</event>
	</state>
</site>
